<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="390dp"
    android:layout_height="60dp"
    android:layout_gravity="center"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/itemIngredient"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:inputType="text"
        android:padding="10dp"
        android:layout_margin="6dp"
        android:background="@drawable/text_frame"
        android:hint="New Ingredient"
        android:textColorHint="#4d4d4d"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/itemAmount"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:inputType="text"
        android:padding="10dp"
        android:layout_margin="6dp"
        android:background="@drawable/text_frame"
        android:layout_toRightOf="@id/itemIngredient"
        android:hint="Amt"
        android:textColorHint="#4d4d4d"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/itemWeight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="text"
        android:padding="10dp"
        android:layout_margin="6dp"
        android:background="@drawable/text_frame"
        android:layout_toRightOf="@id/itemAmount"
        android:hint="Measurement"
        android:textColorHint="#4d4d4d"
        android:textStyle="bold"/>

</RelativeLayout>