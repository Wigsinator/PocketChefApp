<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="presenter"
            type = "com.lions.cookbook.ViewRecipeContract.ViewRecipeMVPPresenter"/>
    </data>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewRecipeActivity">

    <ScrollView android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <!--       Recipe Title-->
            <TextView
                android:id="@+id/RecipeTitle"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="Insert Recipe Title Here">
            </TextView>


            <!--        Recipe Serving Size-->
            <RelativeLayout
                android:id="@+id/ServingSizeLayout"
                android:layout_width="320dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_frame"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/Recommended"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="left"
                    android:layout_marginStart="20dp"
                    android:layout_margin="5dp"
                    android:text="Recommended Serving Size:"
                    android:layout_toLeftOf="@id/ServingSize"
                    android:textColor="#4d4d4d"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/ServingSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="40dp"
                    android:layout_marginTop="5dp"
                    android:text="2"
                    android:textColor="#4d4d4d"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
            </RelativeLayout>


            <!--    List of all the Ingredients & Amounts-->
            <RelativeLayout
                android:id="@+id/ingredientLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/IngredientText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="left"
                    android:layout_marginStart="40dp"
                    android:text="Ingredients"
                    android:textColor="#4d4d4d"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/AmtText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="40dp"
                    android:text="Amount/Weight"
                    android:textColor="#4d4d4d"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="390dp"
                android:layout_gravity="center"
                android:background="@drawable/text_frame"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/ingredients"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center">
                </ListView>
            </RelativeLayout>

            <!--        List of all the steps -->
            <TextView
                android:id="@+id/StepsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:text="Steps"
                android:textColor="#4d4d4d"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="390dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/text_frame">
                <ListView
                    android:id="@+id/steps"
                    android:layout_width="350dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true">
                </ListView>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <!--NAVIGATION BAR AT THE BOTTOM-->
    <FrameLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">
        <!-- Main content -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            app:itemIconSize="40dp"
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="#4d4d4d"
            app:itemIconTint="#ffffff"
            app:itemTextColor="#ffffff"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bottom_navigation_menu" />
    </FrameLayout>

</RelativeLayout>
</layout>