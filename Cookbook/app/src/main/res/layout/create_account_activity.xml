<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="presenter"
            type = "com.lions.cookbook.CreateAccountPresent"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateAccountActivity">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/CreateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="Create Your Account!"
                    android:textColor="#4d4d4d"
                    android:textSize="30dp"
                    android:textStyle="bold"/>

                <!-- Edit Text for First Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_pencil">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:background="@drawable/text_frame"
                        android:hint="FIRST NAME"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColorHint="#4d4d4d"
                        android:layout_height="match_parent"
                        android:id="@+id/first_name"/>
                </com.google.android.material.textfield.TextInputLayout>


                <!-- Edit Text for Last Name (Optional??) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    app:endIconDrawable="@drawable/ic_pencil"
                    app:endIconMode="custom">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/text_frame"
                        android:hint="LAST NAME"
                        android:textAlignment="center"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColorHint="#4d4d4d"
                        android:id="@+id/last_name"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Edit Text for Username -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    app:endIconDrawable="@drawable/ic_pencil"
                    app:endIconMode="custom">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/text_frame"
                        android:hint="USERNAME"
                        android:textAlignment="center"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColorHint="#4d4d4d"
                        android:id="@+id/username"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Edit Text for Phone Number -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    app:endIconDrawable="@drawable/ic_pencil"
                    app:endIconMode="custom">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/text_frame"
                        android:hint="PHONE NUMBER"
                        android:textAlignment="center"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColorHint="#4d4d4d"
                        android:id="@+id/phone_number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Edit Text for Gmail (email?) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    app:endIconDrawable="@drawable/ic_pencil"
                    app:endIconMode="custom">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/text_frame"
                        android:hint="GMAIL"
                        android:textAlignment="center"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColorHint="#4d4d4d"
                        android:id="@+id/gmail"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!--         Button to Create Account-->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCreate"
                    android:layout_width="350dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="30dp"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:backgroundTint="#078658"
                    app:iconGravity="textStart"
                    app:iconPadding="10dp"
                    app:iconTint="#4d4d4d"
                    tools:text="CREATE ACCOUNT"
                    android:onClick="@{presenter::handleCreateAccountClicked;}"/>
            </LinearLayout>

        <!--NAVIGATION BAR AT THE BOTTOM-->
        <FrameLayout
            android:id="@+id/navBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true">
            <!-- Main content -->
            <com.google.android.material.bottomnavigation.BottomNavigationView
                app:itemIconSize="40dp"
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:background="#4d4d4d"
                app:itemIconTint="#ffffff"
                app:itemTextColor="#ffffff"
                app:labelVisibilityMode="unlabeled"
                app:menu="@menu/bottom_navigation_menu" />
        </FrameLayout>
    </RelativeLayout>
</layout>