    <ScrollView android:layout_marginTop="30dp"
        android:layout_marginBottom="60dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <!-- Edit Text for Creating the Recipe Title-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_pencil"
                android:hint="INSERT RECIPE TITLE HERE">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:background="@drawable/text_frame"
                    android:layout_height="60dp"/>
            </com.google.android.material.textfield.TextInputLayout>


            <!-- Edit Text for Determining the Recipe Serving Size-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="60dp"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_pencil"
                android:hint="INSERT RECIPE SERVING SIZE HERE">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:background="@drawable/text_frame"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!--        List of all the Ingredients & Amounts-->
            <ListView
                android:id="@+id/ingredients"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true">
            </ListView>

            <!--        List of all the steps (numbered) -->
            <ListView
                android:id="@+id/steps"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true">
            </ListView>

<!--            <RelativeLayout-->
<!--                android:id="@+id/ingredientLayout"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignParentBottom="true">-->

<!--                <EditText-->
<!--                    android:id="@+id/ingredientField"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:inputType="text"-->
<!--                    android:layout_margin="8dp"-->
<!--                    android:layout_toLeftOf="@id/add_button"-->
<!--                    android:hint="New ingredient" />-->

<!--                <Button-->
<!--                    android:id="@+id/add_button"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_alignParentRight="true"-->
<!--                    android:text="Add" />-->
<!--            </RelativeLayout>-->

            <!--         Button to Create the Recipe-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreate"
                android:layout_width="350dp"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="30dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="#4d4d4d"
                android:textSize="18dp"
                app:backgroundTint="#c4c4c4"
                app:iconGravity="textStart"
                app:iconPadding="10dp"
                app:iconTint="#4d4d4d"
                tools:text="CREATE RECIPE" />

        </LinearLayout>

    </ScrollView>

    <!--NAVIGATION BAR AT THE BOTTOM-->
    <FrameLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">
        <!-- Main content -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            app:itemIconSize="40dp"
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="#4d4d4d"
            app:itemIconTint="#ffffff"
            app:itemTextColor="#ffffff"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bottom_navigation_menu" />
    </FrameLayout>

</RelativeLayout>